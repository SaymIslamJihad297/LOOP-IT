<%- layout('./layout/boilerplate') %>

<section>
    <div class="flex flex-col justify-center items-center min-h-screen">
        <form action="/home/login" method="post">
              <label class="input input-bordered flex items-center gap-2 my-5 w-auto md:w-96">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="h-4 w-4 opacity-70">
                  <path
                    d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM12.735 14c.618 0 1.093-.561.872-1.139a6.002 6.002 0 0 0-11.215 0c-.22.578.254 1.139.872 1.139h9.47Z" />
                </svg>
                <input type="text" class="grow" name="username" placeholder="Username" />
              </label>
              <label class="input input-bordered flex items-center gap-2 my-5 w-auto md:w-96">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 16 16"
                  fill="currentColor"
                  class="h-4 w-4 opacity-70">
                  <path
                    fill-rule="evenodd"
                    d="M14 6a4 4 0 0 1-4.899 3.899l-1.955 1.955a.5.5 0 0 1-.353.146H5v1.5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1-.5-.5v-2.293a.5.5 0 0 1 .146-.353l3.955-3.955A4 4 0 1 1 14 6Zm-4-2a.75.75 0 0 0 0 1.5.5.5 0 0 1 .5.5.75.75 0 0 0 1.5 0 2 2 0 0 0-2-2Z"
                    clip-rule="evenodd" />
                </svg>
                <input type="password" class="grow" name="password" placeholder="password"/>
              </label>
              <div class="flex justify-between">
                <button class="btn btn-outline btn-success rounded-none">Login</button>
                <p class="text-black font-bold mt-4">New User? <a class="underline" href="/home/signup">SignUp</a></p>
              </div>
        </form>
    </div>
</section>