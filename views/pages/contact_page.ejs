<%- layout('./layout/boilerplate') %>
    <section>
        <form class="flex flex-col justify-center items-center min-h-screen" action="/home/contact" method="post">
            <label class="input input-bordered flex items-center gap-2 w-auto md:w-96">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                    class="h-4 w-4 opacity-70">
                    <path
                        d="M2.5 3A1.5 1.5 0 0 0 1 4.5v.793c.026.009.051.02.076.032L7.674 8.51c.206.1.446.1.652 0l6.598-3.185A.755.755 0 0 1 15 5.293V4.5A1.5 1.5 0 0 0 13.5 3h-11Z" />
                    <path
                        d="M15 6.954 8.978 9.86a2.25 2.25 0 0 1-1.956 0L1 6.954V11.5A1.5 1.5 0 0 0 2.5 13h11a1.5 1.5 0 0 0 1.5-1.5V6.954Z" />
                </svg>
                <input type="text" class="grow" name="contact[email]" placeholder="Contact Email" required />
            </label>
            <label class="input input-bordered flex items-center gap-2 my-5 w-auto md:w-96">
                <i class="fa-solid fa-phone"></i>
                <input type="number" class="grow" name="contact[phone]" placeholder="Contact Number" required />
            </label>
            <label for="">
                <textarea class="textarea textarea-error" name="contact[comment]" placeholder="Anything you want to say..." cols="30" rows="5"
                    required></textarea>
            </label>
            <button class="btn btn-outline btn-success rounded-none md:w-44">Send</button>
        </form>
    </section>